{
  "name": "ui",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "parcel index.html -p 8081",
    "build": "parcel build index.html",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --ignore-path .gitignore --fix"
  },
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "@salte-auth/auth0": "^1.0.0-rc.1",
    "@salte-auth/bitbucket": "^1.0.0-rc.1",
    "@salte-auth/github": "^1.0.0-rc.1",
    "@salte-auth/gitlab": "^1.0.0-rc.1",
    "@salte-auth/redirect": "^1.0.0-rc.7",
    "@salte-auth/salte-auth": "^3.0.0-rc.10",
    "debug": "^4.1.1",
    "raven-js": "^3.27.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet-async": "^1.0.4",
    "react-highlight": "^0.12.0",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.13.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-decorators": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@hapi/code": "^7.0.0",
    "@svgr/parcel-plugin-svgr": "^4.3.3",
    "babel-eslint": "^10.0.3",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-plugin-transform-postcss": "^0.3.0",
    "chance": "^1.1.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.0.0",
    "eslint-config-airbnb": "^18.0.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.0.0",
    "husky": "^3.1.0",
    "jest-cli": "^24.9.0",
    "lint-staged": "^9.5.0",
    "parcel-bundler": "^1.12.4",
    "postcss": "^6.0.23",
    "postcss-modules": "^1.4.1",
    "postcss-nested": "^4.2.1",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "IE 11"
  ]
}
